    info_message += f"\nØ§Ù„Ù…ÙˆØ¶ÙˆØ¹Ø§Øª ÙˆØ§Ù„ÙƒÙ„ÙŠØ´Ø©:\n\n"
    for i, (subject, msg) in enumerate(zip(user_info['email_subjects'], user_info['email_messages'])):
        info_message += f"Ø§Ù„Ù…ÙˆØ¶ÙˆØ¹ {i + 1}: {subject}\nØ§Ù„ÙƒÙ„ÙŠØ´Ø© {i + 1}: {msg}\n\n"
    info_message += f"Ø§Ù„Ø³Ù„ÙŠØ¨: {user_info['interval_seconds']} Ø«Ø§Ù†ÙŠØ©\n\n"
    info_message += f"Ø¹Ø¯Ø¯ Ø§Ù„Ø±Ø³Ø§Ø¦Ù„: {user_info['message_count']}\n"
    
